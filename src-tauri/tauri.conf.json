{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Game Memories",
  "version": "1.0.0",
  "identifier": "com.mateusrnm.github.io.gamememories",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173"
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["gmemories"]
      }
    }
  },
  "app": {
    "windows": [
      {
        "title": "Game Memories",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "./capabilities/default.json"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
